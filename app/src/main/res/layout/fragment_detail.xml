<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".fragment.DetailFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_imageLinks"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="5"
                android:orientation="vertical"
                android:padding="8dp">
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    tools:text="Christian Outdoor Leadersheir" />
                <TextView
                    android:id="@+id/tv_publishedDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="#8f8f8f"
                    android:textSize="10sp"
                    tools:text="2019" />
                <TextView
                    android:id="@+id/tv_authors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:textColor="#8f8f8f"
                    android:textSize="10sp"
                    tools:text="Christian Outdoor Leadersheir" />
                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="#8f8f8f"
                    android:textSize="10sp"
                    tools:text="dbdbdfbvdfbrtbrfgfgfthrthrthrthgrthrthrthrthrthrthrthrthrththrthrthrthrthrthrthrthrthrthrthtbgrb" />
                <LinearLayout
                    android:id="@+id/book_rating_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">
                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <RatingBar
                        android:id="@+id/book_rating"
                        style="?android:ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="0.1"
                        tools:rating="3.5" />
                    <TextView
                        android:id="@+id/book_rating_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:paddingLeft="4dp"
                        android:textColor="#8f8f8f"
                        android:textSize="12sp"
                        tools:text="(125)" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingLeft="100dp">
            <TextView
                android:id="@+id/tv_price"
                style="?android:textAppearanceSmall"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-medium"
                android:padding="4dp"
                android:textColor="#8f8f8f"
                tools:text=" $3.00 " />
            <Button
                android:id="@+id/btn_addfavorite"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="@color/colorPrimary"
                android:textSize="4sp"
                android:text="Adicionar Favorito" />

            <Button
                android:id="@+id/btn_tvbuy"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="22dp"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="sans-serif-medium"
                android:text="Comprar"
                android:textSize="4sp" />

        </LinearLayout>
    </LinearLayout> />
</LinearLayout>
